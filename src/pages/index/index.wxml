<view class="page">
  <view class="header">
    <ui-drawer rate="{{ 4 }}" class="mine"></ui-drawer>
    <view class="title">逸绽出行</view>
    <image src="../../assets/icon/car.png" mode="widthFix" style="width:65px;margin-right: -40rpx;margin-top:31px"></image>
  </view>
  <view class="content">
    <view class="card">
      <view class="top">
        <view class="left" bindtap="login">
          <image class="ava" mode="scaleToFill" src="../../assets/images/ava.png"></image>
          <!-- <view class="user_name">点击登录</view> -->
          <!-- 认证后才出现的内容 -->
          <view class="user_info">
            <view class="name">李成新</view>
            <view class="item">
              <!-- <image class="star" src="../../assets/icon/star.png" mode="widthFix" wx:for="{{ 3 }}" wx:key="index"></image>
              <image class="star" src="../../assets/icon/nonestar.png" mode="widthFix" wx:for="{{ 2 }}" wx:key="index"></image> -->
              <ui-rate value="{{ 4 }}" size="{{ 32 }}" gap="{{ 8 }}"></ui-rate>
            </view>
          </view>
          
        </view>
        <view class="right" bindtap="certification">立即认证</view>
      </view>
      <view class="bottom">
        <view class="item">
          <view class="title">订单数</view>
          <view class="count">500</view>
        </view>
        <view class="line"></view>
        <view class="item">
          <view class="title">总收益</view>
          <view class="count">300000.00</view>
        </view>
        <view class="line"></view>
        <view class="item">
          <view class="title">里程数</view>
          <view class="count">10000KM</view>
        </view>
      </view>
    </view>
    <scroll-view scroll-y="true" style="height: calc(100vh - 618rpx);margin-top: 28rpx;">
      <!-- 骨架屏，获取数据前展示， -->
      <!-- <ui-skeleton wx:for="{{ 4 }}" wx:key="index"></ui-skeleton> -->
      <ui-history wx:for="{{ 3 }}" wx:key="index" status="{{ index + 1 }}"></ui-history>
      <!-- 接单按钮 -->
      <view class="taking" hover-class="taking-hover" bindtap="toTakeOrder">
        <image class="font" src="../../assets/icon/jd.png" mode="widthFix" />
      </view>
      <view class="taking child1"></view>
      <view class="taking child2"></view>
      <view style="height: 200rpx"></view>
        
    </scroll-view>
    
      
    
  </view>
</view>




