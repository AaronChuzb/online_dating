.content {
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0px 28rpx;
  padding-bottom: 56rpx;
}
.content .item {
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 48rpx;
  color: #222222;
}
.content .button {
  margin: 0 52rpx;
  margin-top: 140rpx;
  font-size: 36rpx;
  font-weight: 400;
  border: 2rpx solid #3983F6;
  color: #3983F6;
}
