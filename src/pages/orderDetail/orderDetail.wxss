.page {
  height: 100vh;
}
.card {
  margin: 0 20rpx;
  height: 204rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  display: flex;
  justify-content: space-between;
  font-weight: 400;
}
.card .left {
  margin-left: 28rpx;
  margin-top: 16rpx;
}
.card .left .item {
  height: 56rpx;
  display: flex;
  align-items: center;
}
.card .left .item .dot {
  border-radius: 50%;
  border: 4rpx solid #FFBA19;
  width: 8rpx;
  height: 8rpx;
  margin-right: 20rpx;
}
.card .left .item .dot1 {
  border: 4rpx solid #3983F6;
}
.card .left .item .dot2 {
  border: 4rpx solid #F14942;
}
.card .right {
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.card .right .ava {
  width: 72rpx;
  height: 72rpx;
  background: #FFFFFF;
  border: 2rpx solid #707070;
  border-radius: 50%;
  margin-top: 50rpx;
}
.card .right .user_name {
  margin: 16rpx 0;
  font-size: 28rpx;
}
.status {
  height: 172rpx;
  margin: 0 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding-top: 56rpx;
  margin-bottom: 28rpx;
}
.status .title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 400;
  color: #999999;
}
.status .title .line {
  width: 132rpx;
  height: 2rpx;
  background-color: #F2F2F2;
}
.status .title .text {
  margin: 0 24rpx;
}
.status .content {
  font-size: 40rpx;
  font-weight: 400;
  color: #222222;
  text-align: center;
  line-height: 40rpx;
  margin-top: 36rpx;
}
.status .money {
  font-size: 56rpx;
}
.status .money text {
  font-size: 24rpx;
}
.evaluation {
  height: 218rpx;
}
