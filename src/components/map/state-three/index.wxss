.header {
  position: fixed;
  z-index: 999;
  top: 108rpx;
  padding: 48rpx 52rpx;
  height: 174rpx;
  background: #ffffff;
  width: calc(100% - 144rpx);
  margin: 0 20rpx;
  border-radius: 32rpx;
  will-change: transform;
  transition: all 1s;
  color: #222222;
}
.header .destination {
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
}
.header .destination text {
  color: #3983F6;
}
.header .status {
  margin-top: 30rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
}
.header .time_box {
  height: 84rpx;
  border-top: 2rpx solid #F2F2F2;
  margin-top: 42rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #222222;
  opacity: 1;
}
.header .time_box .line {
  width: 2rpx;
  height: 52rpx;
  background: #F2F2F2;
}
.header .time_box text {
  color: #3983F6;
}
.header_hidden {
  transform: translateY(-386rpx);
}
.button {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 16rpx;
}
.bottom {
  position: fixed;
  z-index: 999;
  margin: 0 20rpx;
  height: 296rpx;
  width: calc(100% - 40rpx);
  border-radius: 32rpx;
  background: #ffffff;
  bottom: 112rpx;
  will-change: transform;
  transition: all 1s;
}
.bottom .content {
  margin-top: 40rpx;
  margin-left: 52rpx;
  margin-right: 50rpx;
}
.bottom .content .title {
  color: #3983F6;
}
.bottom .content .user_info {
  margin-top: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom .content .user_info .left {
  display: flex;
  align-items: center;
}
.bottom .content .user_info .left .ava {
  width: 108rpx;
  margin-right: 12rpx;
}
.bottom .content .user_info .left :nth-child(2) {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
}
.bottom_hidden {
  transform: translateY(494rpx);
}
.button_hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
.full {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  right: 20rpx;
  background: #ffffff;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.16);
  border-radius: 8px;
  bottom: 552rpx;
  will-change: transform;
  transition: all 1s;
}
.full image {
  width: 40rpx;
}
.pos {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  right: 20rpx;
  background: #ffffff;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.16);
  border-radius: 8px;
  bottom: 444rpx;
  will-change: transform;
  transition: all 1s;
}
.pos image {
  width: 40rpx;
}
.full_down {
  transform: translateY(330rpx);
}
.pos_down {
  transform: translateY(330rpx);
}
